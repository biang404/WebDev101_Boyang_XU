---
import Navbar from '../components/navbar.astro';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{title}</title>
  <!-- 引入全局 CSS -->
  <link rel="stylesheet" href={new URL("/styles/global.css", import.meta.url)} />
</head>
<body>
  <Navbar />
  <main>
    <slot /> <!-- 页面内容插入点 -->
  </main>
</body>
</html>


<style>
	#game-container {
	  position: relative;
	  z-index: 1; /* 确保在导航栏下方 */
	  padding-top: 60px;
	}
	
	/* 保持导航栏在最上层 */
	nav {
	  position: fixed;
	  top: 0;
	  left: 0;
	  width: 100%;
	  z-index: 1000;
	}
  </style>

