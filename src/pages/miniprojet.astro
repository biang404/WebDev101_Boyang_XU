---
import BaseLayout from '../layouts/Layout.astro';
const pageTitle = "Mini Projet - PUNTO";
---

<BaseLayout title={pageTitle}>
  <style>
    body {
      font-family: sans-serif;
      margin: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .title {
      margin-top: 20px;
      font-size: 24px;
      font-weight: bold;
    }
    table {
      border-collapse: collapse;
      margin: 20px auto;
    }
    td {
      width: 55px;
      height: 55px;
      background-color: #adacac;
      border: 1px solid black;
      text-align: center;
      vertical-align: middle;
    }
    .center-square {
      background-color: white;
    }
  </style>

  <div class="title">Le jeu punto</div>
  <table id="board"></table>

  <!-- ✅ 正确导入从 public/scripts/miniprojet/ 中来的 JS 模块 -->
  <script type="module">
    import { main } from '../../public/scripts/miniprojet/app.js';
    main();
  </script>
</BaseLayout>
